# =============================================================================
# NTP Exporter - Environment Variables Example
# =============================================================================
# Copy this file to .env and customize as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Docker Image Version
# -----------------------------------------------------------------------------
VERSION=latest

# -----------------------------------------------------------------------------
# Grafana Configuration
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# NTP Servers Configuration (comma-separated)
# -----------------------------------------------------------------------------
# Probe Mode - Remote high-quality servers
NTP_SERVERS_PROBE=time.google.com,time.cloudflare.com,pool.ntp.org,time.nist.gov

# Agent Mode - Local server + fallback
NTP_SERVERS_AGENT=127.0.0.1,pool.ntp.org

# Hybrid Mode - Mix of local and remote
NTP_SERVERS_HYBRID=127.0.0.1,time.google.com,time.cloudflare.com

# -----------------------------------------------------------------------------
# Exporter Ports
# -----------------------------------------------------------------------------
EXPORTER_PORT_PROBE=9559
EXPORTER_PORT_AGENT=9560
EXPORTER_PORT_HYBRID=9561

# -----------------------------------------------------------------------------
# Prometheus Configuration
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
# Options: trace, debug, info, warn, error, fatal, panic

# -----------------------------------------------------------------------------
# Advanced NTP Configuration
# -----------------------------------------------------------------------------
# Timeout for NTP requests
NTP_TIMEOUT_PROBE=10s
NTP_TIMEOUT_AGENT=2s
NTP_TIMEOUT_HYBRID=5s

# Number of samples per server
NTP_SAMPLES_PROBE=10
NTP_SAMPLES_AGENT=1
NTP_SAMPLES_HYBRID=5

# Enable adaptive sampling (probe and hybrid modes)
ADAPTIVE_SAMPLING_ENABLED_PROBE=true
ADAPTIVE_SAMPLING_ENABLED_HYBRID=true

# Worker pool configuration
WORKER_POOL_ENABLED_PROBE=true
WORKER_POOL_SIZE_PROBE=10
WORKER_POOL_SIZE_HYBRID=6

# Rate limiting
RATE_LIMIT_ENABLED_PROBE=true
RATE_LIMIT_GLOBAL_PROBE=500
RATE_LIMIT_PER_SERVER_PROBE=30

# Circuit breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_MAX_REQUESTS=5
CIRCUIT_BREAKER_INTERVAL=120s
CIRCUIT_BREAKER_TIMEOUT=60s
CIRCUIT_BREAKER_FAILURE_THRESHOLD=0.6

# -----------------------------------------------------------------------------
# Labels (for Prometheus)
# -----------------------------------------------------------------------------
DATACENTER=us-east-1
REGION=eu-west-1
ENVIRONMENT=development
